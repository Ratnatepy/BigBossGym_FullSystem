          "request": {
            "method": "GET",
            "url": {
              "raw": "http://localhost:5000/api/members"
            }
          }
        },
        {
          "name": "Register Member",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"member_name\": \"John Doe\",\n  \"member_email\": \"john@example.com\",\n  \"member_tel\": \"123456789\",\n  \"member_password\": \"password\"\n}"
            },
            "url": {
              "raw": "http://localhost:5000/api/register"
            }
          }
        },
        {
          "name": "Update Member",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"member_name\": \"Updated Name\"\n}"
            },
            "url": {
              "raw": "http://localhost:5000/api/members/:id"
            }
